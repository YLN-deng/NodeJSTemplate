{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@controller/*": ["controller/*"],
      "@database/*": ["database/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [ 
    "**/*.ts",
    "**/*.d.ts",
  ],
  "exclude": [ "copyStatic.ts" ]
}
